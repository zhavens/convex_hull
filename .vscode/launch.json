{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Convex Hull",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/convex_hull_main.py",
            "console": "integratedTerminal",
            "args": [
                "-algo=grahams",
                "--infile=${workspaceFolder}/inputs/random100_2",
                "--hull_outfile=${workspaceFolder}/outputs/random100_2",
                "--show_plot",
                "-v=1"
            ]
        },
        {
            "name": "Gen Input Set",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/gen_input_set.py",
            "console": "integratedTerminal",
            "args": [
                "--distribution=random",
                "--num_points=100",
                "--outfile=${workspaceFolder}/inputs/random100_2",
                "--show_plot",
                "-v=1"
            ]
        },
        {
            "name": "Plot Hull",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/plot_points.py",
            "console": "integratedTerminal",
            "args": [
                "--points_file=${workspaceFolder}/inputs/random100_2",
                "--hull_file=${workspaceFolder}/outputs/random100_2",
                "-v=1"
            ]
        }
    ]
}